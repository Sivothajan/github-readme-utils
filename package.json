{
  "name": "github-readme-utils",
  "version": "0.1.0",
  "description": "A collection of utilities to enhance your GitHub README files.",
  "author": {
    "name": "Sivothayan",
    "email": "licence@sivothajan.dev",
    "url": "https://sivothajan.dev"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "tsx scripts/pre-build.ts --pre-build",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "generate:assets": "tsx scripts/public-assets-generator.ts --generate-favicons",
    "prune:translations": "tsx scripts/prune-translations.ts",
    "check:licenses": "tsx scripts/third-party-packages-license-checker.ts",
    "create:licenses": "tsx scripts/third-party-packages-license-maker.ts",
    "create:localeDisplayNames:json": "tsx scripts/create-locale-display-name-json.ts"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "canvg": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.554.0",
    "marked": "^17.0.0",
    "motion": "^12.23.24",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "19.2.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "@types/react": "^19",
    "eslint": "^9",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "typescript-eslint": "^8.47.0"
  }
}
